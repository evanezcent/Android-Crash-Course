<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/ci_avatar_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:src="@drawable/me"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ci_avatar_2"
            android:padding="20dp"
            android:orientation="vertical"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pratama Yoga Santosa"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
                android:id="@+id/tv_username"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:clickable="true"
                android:text="https://www.github.com/evanezcent"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginBottom="15dp"
                android:id="@+id/tv_link_repo"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:clickable="true"
                android:text="https://www.linkedin.com/in/pratamays/"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginBottom="10dp"
                android:id="@+id/tv_linkedin"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dicoding Student"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="30dp"
                android:id="@+id/tv_dicoding"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pratamayo16@gmail.com"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/system_notification_accent_color"
                android:layout_marginTop="7dp"
                android:id="@+id/tv_email"
        />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>